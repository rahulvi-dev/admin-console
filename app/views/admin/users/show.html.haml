= render partial: 'admin/dashboard/home'
.col-lg-8.main
  .row
    %ol.breadcrumb
      %li
        %a{:href => "/admin/home"}
          %span.glyphicon.glyphicon-home{"aria-hidden" => "true"}
      %li.active= @user.class
  .row
    .col-lg-10
      %h1.page-header= @user.class
      .panel-body
        .col-lg-8
          %label ID :
        .col-lg-4
          = @user.id
        .col-lg-8
          %label Email :
        .col-lg-4
          = @user.email
        .col-lg-8
          %label First Name :
        .col-lg-4
          = @user.first_name
        .col-lg-8
          %label Last Name :
        .col-lg-4
          = @user.last_name
        .col-lg-8
          %label City :
        .col-lg-4
          = @user.city
        .col-lg-8
          %label Mobile No :
        .col-lg-4
          = @user.mobile_number
        .col-lg-8
          %label Role:
        .col-lg-4
          = @user.roles.collect(&:name).each do |a|
            = a
            %end
        %br/
        .col-md-5
          = link_to edit_admin_user_path(@user.id), class: "btn btn-info" do
            %i.glyphicon.glyphicon-pencil
            %strong Edit
        .col-md-5
          = link_to admin_user_path(@user.id), method: :delete, class: "btn btn-info" do
            %i.glyphicon.glyphicon-trash
            %strong Delete
        .col-md-2
          = link_to admin_users_path, class: "btn btn-info" do
            %i.glyphicon.glyphicon-th-list
            %strong Show All
